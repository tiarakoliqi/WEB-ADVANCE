/*ZOOM IN*/
#speedsters img{
    transform:scale(1);
    transition: .3 ease-in-out;
}

#speedsters:hover img{
    transform: scale(1.3);
}

/*SLIDE*/
#hipsters img{
    margin-left: 0px;
    transition: .3s ease-in-out;
}

#hipsters:hover img{
    margin-left: 30px;
}

/*Blur*/
#shadows img{
    filter:blur(3px);
    transition: .3s ease-in-out;
}

#shadows:hover img{
    filter:blur(0);
}

/*GRAY SCALE*/
#engineers img {
    filter:grayscale(100%);
    transition: .3s ease-in-out;
}

#engineers:hover img{
    filter:grayscale(0);
}